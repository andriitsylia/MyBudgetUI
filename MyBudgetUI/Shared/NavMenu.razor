<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">MyBudgetUI</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="summary">
                <span class="oi oi-plus" aria-hidden="true"></span> Отчеты
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="income">
                <span class="oi oi-plus" aria-hidden="true"></span> Доходы
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="expense">
                <span class="oi oi-plus" aria-hidden="true"></span> Расходы
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="incometype">
                <span class="oi oi-plus" aria-hidden="true"></span> Типы доходов
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="expensetype">
                <span class="oi oi-plus" aria-hidden="true"></span> Типы расходов
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
