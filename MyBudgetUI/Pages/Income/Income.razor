@page "/income"

@inherits IncomeBase

@if (Incomes == null)
{
    <div class = "spinner-border justify-content-center"></div>
}
else
{
    @if (Incomes.Any())
    {
        <div class="d-flex flex-row align-items-center">
            <h3><b>List of the incomes</b></h3>
            <a href="/incomeedit" class="btn btn-outline-primary mx-4">Create</a>
        </div>
        

        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Sum</th>
                    <th>Comment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Incomes)
                {
                    <tr>
                        <td>@(Counter++)</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.IncomeType.Name</td>
                        <td>@item.Sum</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href = "@($"incomeedit/{item.Id}")" class = "btn btn-outline-primary mx-1">Edit</a>
                            <button type="button" class = "btn btn-outline-danger mx-1" value="@item.Id"@onclick="(() => DeleteIncome(item.Id))">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

