@page "/incometotalondateinterval/{begindate}/{enddate}"

@inherits IncomeTotalOnDateIntervalBase

@if (IncomeTotalOnDateInterval == null)
{
    <div class="d-flex align-items-center">
        <strong>Загрузка списка доходов...</strong>
        <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
    </div>
}
else
{
    <h3>Доходы за период @BeginDate - @EndDate</h3>
    @if (IncomeTotalOnDateInterval.Incomes.Any())
    {

        <h4>Всего @IncomeTotalOnDateInterval.Total</h4>
        <h4>Список доходов</h4>

        <table class="table table-striped table-bordered my-2">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Дата</th>
                    <th>Название</th>
                    <th>Сумма</th>
                    <th>Примечание</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in IncomeTotalOnDateInterval.Incomes)
                {
                    <tr>
                        <td>@(Counter++)</td>
                        <td>@item.Date.ToString("dd-MM-yyyy")</td>
                        <td>@item.IncomeType.Name</td>
                        <td>@item.Sum</td>
                        <td>@item.Comment</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>Информация о доходах отсутствует</h4>
    }

}
