@using Models;
@using System.Net.Http;
@using System.Net.Http.Json;
@inject HttpClient httpClient;

@page "/incometype"
@inherits IncomeTypeBase

<h1>IncomeType</h1>

@if (IncomeTypes == null)
{
    <div class ="d-flex justify-content-center">
        <div class = "spinner-border"></div>
    </div>
}
else
{
    @if (IncomeTypes.Any())
    {
        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Comment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in IncomeTypes)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href = "@($"incometypeedit/{item.Id}")" class = "btn btn-outline-primary m-1">Edit</a>
                            <a href = "#" class = "btn btn-outline-primary m-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
