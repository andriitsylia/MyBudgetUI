@page "/income"
@inherits IncomeBase

<h3>Income</h3>

@if (Incomes == null)
{
    <div class ="d-flex justify-content-center">
        <div class = "spinner-border"></div>
    </div>
}
else
{
    @if (Incomes.Any())
    {
        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Sum</th>
                    <th>Comment</th>
                    <th>IncomeTypeId</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Incomes)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.IncomeType.Name</td>
                        <td>@item.Sum</td>
                        <td>@item.Comment</td>
                        <td>@item.IncomeTypeId</td>
                        <td>
                            <a href = "@($"incomeedit/{item.Id}")" class = "btn btn-outline-primary m-1">Edit</a>
                            <a href = "#" class = "btn btn-outline-primary m-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

