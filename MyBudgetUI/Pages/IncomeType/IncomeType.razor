@page "/incometype"

@inherits IncomeTypeBase

@if (IncomeTypes == null)
{
    <div class = "spinner-border justify-content-center"></div>
}
else
{
    @if (IncomeTypes.Any())
    {
        <div class="d-flex flex-row align-items-center">
            <h3><b>List of the income types</b></h3>
            <a href="/incometypeedit" class="btn btn-outline-primary mx-4">Create</a>
        </div>

        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Comment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in IncomeTypes)
                {
                    <tr>
                        <td>@(Counter++)</td>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href = "@($"incometypeedit/{item.Id}")" class = "btn btn-outline-primary m-1">Edit</a>
                            <button type="button" class="btn btn-outline-danger m-1" value="@item.Id" @onclick="(() => DeleteIncomeType(item.Id))">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
