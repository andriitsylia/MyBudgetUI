@page "/incometype"

@inherits IncomeTypeBase

@if (IncomeTypes == null)
{
    <div class="d-flex align-items-center">
        <strong>Загрузка типов доходов...</strong>
        <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
    </div>
}
else
{
    @if (IncomeTypes.Any())
    {
        <div class="d-flex flex-row align-items-center">
            <h3>Список типов доходов</h3>
            <a href="/incometypeedit" class="btn btn-outline-primary mx-4">Создать</a>
        </div>

        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Название</th>
                    <th>Примечание</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in IncomeTypes)
                {
                    <tr>
                        <td>@(Counter++)</td>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href = "@($"incometypeedit/{item.Id}")" class = "btn btn-outline-primary m-1">Редактировать</a>
                            <button type="button" class="btn btn-outline-danger m-1" value="@item.Id" @onclick="(() => DeleteIncomeType(item.Id))">
                                Удалить
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
