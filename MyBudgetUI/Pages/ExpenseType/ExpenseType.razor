@page "/expensetype"

@inherits ExpenseTypeBase

@if (ExpenseTypes == null)
{
    <div class="d-flex align-items-center">
        <strong>Загрузка типов расходов...</strong>
        <div class="spinner-border ms-auto" role="status" aria-hidden="true"></div>
    </div>
}
else
{
    @if (ExpenseTypes.Any())
    {
        <div class="d-flex flex-row align-items-center">
            <h3>Список типов расходов</h3>
            <a href="/expensetypeedit" class="btn btn-outline-primary mx-4">Создать</a>
        </div>

        <table class="table table-striped table-bordered my-3">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Название</th>
                    <th>Примечание</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in ExpenseTypes)
                {
                    <tr>
                        <td>@(Counter++)</td>
                        <td>@item.Name</td>
                        <td>@item.Comment</td>
                        <td>
                            <a href = "@($"expensetypeedit/{item.Id}")" class = "btn btn-outline-primary mx-1">Редактировать</a>
                            <button type="button" class = "btn btn-outline-danger mx-1" value="@item.Id" @onclick="(() => DeleteExpenseType(item.Id))">
                                Удалить
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}