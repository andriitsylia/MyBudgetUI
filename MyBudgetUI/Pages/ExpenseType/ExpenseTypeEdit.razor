@page "/expensetypeedit/{id}"
@page "/expensetypeedit"

@inherits ExpenseTypeEditBase

@if (ExpenseType == null)
{
    <div class="spinner-border justify-content-center"></div>
}
else
{
    <EditForm Model="@ExpenseType" OnValidSubmit="SaveExpenseType">
        <DataAnnotationsValidator />

        <h3><b>@PageHeader</b></h3>

        <div class="form-group row">
            <label for="name" class="col-form-label col-sm-1">Name:</label>
            <div class="col-sm-6">
                <InputText class="form-control" id="name" @bind-Value="ExpenseType.Name" />
                <ValidationMessage For="@(() => ExpenseType.Name)" />
            </div>
        </div>
        <div class="form-group row">
            <label for="comment" class="col-form-label col-sm-1">Comment:</label>
            <div class="col-sm-6">
                <InputText class="form-control" id="comment" @bind-Value="ExpenseType.Comment" />
                <ValidationMessage For="@(() => ExpenseType.Comment)" />
            </div>
        </div>
        <div class="form-group row">
            <a href="/expensetype" class = "btn btn-outline-primary m-1">Back</a>
            <button type="submit" class="btn btn-outline-primary m-1">Save</button>
            @if (ExpenseType.Id > 0)
            {
                <button type="button" class="btn btn-outline-danger m-1" @onclick="DeleteExpenseType">Delete</button>
            }
        </div>
    </EditForm>
}